@model IEnumerable<WebHotel.ViewModel.RoomDetailsViewModel>

<div class="modal-dialog fo" style="right:300px">
    <div class="modal-content" style="width:1250px">
        <div class="modal-header" style="width:1200px">
            <table class="table table-striped table-dark" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Ações -
                        </th>
                        <th scope="col">
                            Imagens Quartos
                        </th>
                        <th scope="col">
                            Números Quartos
                        </th>
                        <th scope="col">
                            Preço Quartos
                        </th>
                        <th scope="col">
                            Estatus Quartos
                        </th>
                        <th scope="col">
                            Tipo Quartos
                        </th>
                        <th scope="col">
                            Capacidade Quartos
                        </th>
                        <th scope="col">
                            Descrição Quartos
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>
                <span id="btnDelete" class="glyphicon glyphicon-trash" onclick="DeleteRoom(@item.RoomId)"></span> &nbsp;&nbsp;
                <span id="btnEdit" class="glyphicon glyphicon-pencil" onclick="EditRoom(@item.RoomId)"></span>
            </td>
            <td>
                <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="30" height="30" class="img-responsive" />
            </td>
            <td>
                @item.RoomNumber
            </td>
            <td>
                @item.RoomPrice
            </td>
            <td>
                @item.BookingStatus
            </td>
            <td>
                @item.RoomType
            </td>
            <td>
                @item.RoomCapacity
            </td>
            <td>
                @item.RoomDescription
            </td>
        </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>
