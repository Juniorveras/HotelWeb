@model IEnumerable<WebHotel.ViewModel.RoomBookingViewModel>


    <div class="modal-dialog fo" style="right:300px">
        <div class="modal-content" style="width:1250px">
            <div class="modal-header" style="width:1200px">
                <table class="table table-striped table-dark" style="width: 1200px">
                    <thead>
                        <tr>
                            <th>
                                Nome
                            </th>
                            <th>
                                Endereço
                            </th>
                            <th>
                                Telefone
                            </th>
                            <th>
                                Entrada Estadia
                            </th>
                            <th>
                                Saída Estadia
                            </th>
                            <th>
                                Quarto
                            </th>
                            <th>
                                Numero de Hospedes
                            </th>
                            <th>
                                Dias Hospedado
                            </th>
                            <th>
                                Valor Hospedagem
                            </th>
                            <th>
                                Total Estadia
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CustomerName
                                </td>
                                <td>
                                    @item.CustomerAddress
                                </td>
                                <td>
                                    @item.CustomerPhone
                                </td>
                                <td>
                                    @item.BookingFrom
                                </td>
                                <td>
                                    @item.BookingTo
                                </td>
                                <td>
                                    @item.RoomNumber
                                </td>
                                <td>
                                    @item.NumberOfMembers
                                </td>
                                <td>
                                    @item.NumberOfDays
                                </td>
                                <td>
                                    @item.RoomPrice.ToString("#,##0.00")
                                </td>
                                <td>
                                    @item.TotalAmount.ToString("#,##0.00")
                                </td>
                            </tr>
                         }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
